<style type="text/css">
  #filters {
    position: fixed;
    bottom:0px;
    width: 100%;
    height: 50px;
    background: lightgray;
    -webkit-transition: height .3s ease;
    transition: height .3s ease;
  }
  #filters:target {
    height: 100%;
    overflow: scroll;
    -webkit-overflow-scrolling: touch;
  }
  #bottombutton {
    width: 100%;
    height: 50px;
    background: green;
    padding-top: 10px;
  }
  h3 {
    margin-top: 0px;
  }
</style>



<div id="filters">
  <a class="togglelink" href="#" style="text-decoration: none">
    <div id="bottombutton">
      <h3 class="text-center">
        <font color="white">
          Quick Filter
        </font>
      </h3>
    </div>
  </a>


<a href="/tv">Advanced Filters</a>



<script type="text/javascript">
  $(document).ready(function(){
    $( ".togglelink" ).click(function(){
      if($(this).attr("href")=="#filters")
      {
        $(this).attr( "href", "#" )
      }
      else
      {
        $(this).attr( "href", "#filters" )
      }
    });
  });
</script>
